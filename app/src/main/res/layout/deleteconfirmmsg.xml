<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="318dp"
        android:layout_height="279dp"
        android:layout_gravity="center"
        android:layout_marginStart="26dp"
        android:layout_marginTop="222dp"
        android:background="@color/gray_text_color"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/btnCloses"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:gravity="center"
            android:text="@string/closeicon"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="303dp"
            android:layout_height="171dp"
            android:background="@color/DimGray"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/hero_image"
                app:srcCompat="@drawable/ic_delete_black_24dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/deletmsg"
                android:textColor="@color/White"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" />


        <TableRow

            android:id="@+id/tableRow40"
            android:layout_width="308dp"
            android:layout_height="38dp"

            android:orientation="vertical">


            <Space
                android:layout_width="51dp"
                android:layout_height="43dp" />

            <Button
                android:id="@+id/deletbtn1"
                android:layout_width="66dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_button"
                android:text="@string/yesmsh" />


            <Space
                android:layout_width="84dp"
                android:layout_height="43dp" />

            <Button
                android:id="@+id/deletebtn2"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_button2"
                android:text="@string/nomsg" />
        </TableRow>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>